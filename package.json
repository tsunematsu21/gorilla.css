  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "autoprefixer": "^9.7.3",
    "banner-cli": "^0.14.1",
    "clean-css-cli": "^4.3.0",
    "husky": "^3.1.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0"
  },
  "scripts": {
    "build": "run-s build:clean build:sass build:autoprefix build:banner build:cleancss",
    "build:clean": "rimraf dist",
    "build:sass": "node-sass --output-style expanded src/gorilla.scss dist/gorilla.css",
    "build:autoprefix": "postcss --use autoprefixer --map false --output dist/gorilla.css dist/gorilla.css",
    "build:banner": "banner-cli dist/*.css",
    "build:cleancss": "cleancss -o dist/gorilla.min.css dist/gorilla.css"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
